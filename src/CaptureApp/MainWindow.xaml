<Window x:Class="CaptureApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Capture" Height="520" Width="760" MinWidth="640" MinHeight="480"
        Closing="OnClosing">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Grid.Row="0" Margin="0 0 0 12">
            <StackPanel Width="220">
                <TextBlock Text="Language" FontWeight="SemiBold" />
                <ComboBox x:Name="LanguageComboBox" DisplayMemberPath="DisplayName" SelectedValuePath="Code" />
            </StackPanel>
            <StackPanel Margin="24 0 0 0" VerticalAlignment="Bottom" Orientation="Horizontal" HorizontalAlignment="Left">
                <Button x:Name="RecordButton" Width="100" Height="36" Margin="0 0 12 0" Click="OnRecordClicked">Record</Button>
                <Button x:Name="StopButton" Width="100" Height="36" Margin="0 0 12 0" Click="OnStopClicked" IsEnabled="False">Stop</Button>
                <Button x:Name="TranscribeButton" Width="120" Height="36" Click="OnTranscribeClicked" IsEnabled="False">Transcribe</Button>
            </StackPanel>
        </StackPanel>

        <GroupBox Header="Whisper Settings" Grid.Row="1" Margin="0 0 0 12">
            <Grid Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="Executable" Grid.Row="0" Grid.Column="0" Margin="0 0 12 8" VerticalAlignment="Center" />
                <TextBox x:Name="WhisperExecutableTextBox" Grid.Row="0" Grid.Column="1" Margin="0 0 0 8" />

                <TextBlock Text="Model" Grid.Row="1" Grid.Column="0" Margin="0 0 12 8" VerticalAlignment="Center" />
                <TextBox x:Name="WhisperModelTextBox" Grid.Row="1" Grid.Column="1" Margin="0 0 0 8" />

                <TextBlock Text="Output Folder" Grid.Row="2" Grid.Column="0" Margin="0 0 12 8" VerticalAlignment="Center" />
                <TextBox x:Name="WhisperOutputTextBox" Grid.Row="2" Grid.Column="1" Margin="0 0 0 8" />

                <TextBlock Text="Extra Args" Grid.Row="3" Grid.Column="0" Margin="0 0 12 0" VerticalAlignment="Center" />
                <TextBox x:Name="WhisperArgsTextBox" Grid.Row="3" Grid.Column="1" Margin="0" />
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="2" Margin="0 0 0 12">
            <TextBlock Text="Last Recording" FontWeight="SemiBold" />
            <TextBlock x:Name="LastRecordingTextBlock" Text="None" TextWrapping="Wrap" />
            <TextBlock Text="Status" FontWeight="SemiBold" Margin="0 12 0 0" />
            <TextBlock x:Name="StatusTextBlock" Text="Idle" TextWrapping="Wrap" />
        </StackPanel>

        <TextBox x:Name="LogTextBox" Grid.Row="3" IsReadOnly="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" AcceptsReturn="True" />
    </Grid>
</Window>
